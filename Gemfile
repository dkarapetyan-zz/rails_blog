source 'https://rubygems.org'

gem 'rails'

group :development do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'ruby_gntp'
  gem 'guard-rspec'
  gem 'guard-livereload'
  gem 'yajl-ruby'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  gem 'capybara'
  gem 'guard-spork'
  gem 'rb-fsevent'
  gem 'spork-rails'
  gem 'webrat'
end

group :production do
  gem 'pg'
end
